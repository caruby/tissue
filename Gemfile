  gem 'ruby-debug'
  # Uncomment the following line if there are changes to caruby-core. Change the path option
  # to your caruby-core workspace location. Commit the changed Gemfile and Gemfile.lock to a
  # local git branch rather than to the master branch. Do not check in the local change.
  gem 'caruby-core', :path => File.dirname(__FILE__) + '/../core', :require => 'caruby'
  gem 'caruby-tissue', :path => File.dirname(__FILE__), :require => 'catissue'
end
